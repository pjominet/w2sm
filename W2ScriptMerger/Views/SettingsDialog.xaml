<Window x:Class="W2ScriptMerger.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="300" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Game Path -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Game Path:" Foreground="#CCCCCC" VerticalAlignment="Center"/>
            <TextBox x:Name="GamePathTextBox" Grid.Column="1"
                     Style="{StaticResource DarkTextBox}" IsReadOnly="True"/>
            <Button Grid.Column="2" Content="Browse..." Click="BrowseGamePath_Click" ToolTip="Select game folder"  Margin="6,0,0,0"
                    Style="{StaticResource AccentButton}" Width="80"/>
            <Button Grid.Column="3" Content="ðŸ“‚" ToolTip="Open folder" Click="OpenGameFolder_Click"
                    Style="{StaticResource DarkButton}" Width="40" Margin="6,0,0,0"/>
        </Grid>

        <!-- Game Path Validation -->
        <TextBlock x:Name="GamePathValidationText" Grid.Row="1" Margin="100,0,0,10" FontSize="11" Foreground="#E37308"/>

        <!-- Data Path -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Data Path:" Foreground="#CCCCCC" VerticalAlignment="Center"/>
            <TextBox x:Name="DataPathTextBox" Grid.Column="1"
                     Style="{StaticResource DarkTextBox}" IsReadOnly="True"/>
            <Button Grid.Column="2" Content="Browse..." Click="BrowseDataPath_Click" ToolTip="Select data folder"  Margin="6,0,0,0"
                    Style="{StaticResource AccentButton}" Width="80"/>
            <Button Grid.Column="3" Content="ðŸ“‚" ToolTip="Open folder" Click="OpenDataFolder_Click"
                    Style="{StaticResource DarkButton}" Width="40" Margin="6,0,0,0"/>
        </Grid>

        <!-- Info text -->
        <TextBlock Grid.Row="3" Text="Data Path is where extracted mods, scripts and any other runtime data are stored. Default is the app's folder."
                   Foreground="#888888" FontSize="11" TextWrapping="Wrap" Margin="100,0,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Click="Save_Click" Style="{StaticResource SuccessButton}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource DarkButton}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
