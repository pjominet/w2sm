<Window x:Class="W2ScriptMerger.Views.DiffMergeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Script Merge Editor"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                    <TextBlock x:Name="FileNameText" Text="script.ws" FontSize="16" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <TextBlock x:Name="ConflictIndexText" Text=" (1/5)" FontSize="14" Foreground="#888888" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                
                <TextBlock x:Name="FilePathText" Grid.Row="1" Grid.Column="0" Text="path/to/script.ws" FontSize="11" Foreground="#888888" Margin="0,4,0,0"/>

                <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PrevConflictButton" Content="◀ Previous" Click="PrevConflict_Click" Style="{StaticResource DarkButton}" Margin="0,0,8,0" Padding="12,6"/>
                    <Button x:Name="NextConflictButton" Content="Next ▶" Click="NextConflict_Click" Style="{StaticResource DarkButton}" Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Diff Panels -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Vanilla/Base -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#333333" Padding="10,6">
                        <Grid>
                            <TextBlock x:Name="LeftPanelTitle" Text="Vanilla Version" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                            <Button x:Name="UseVanillaButton" Content="Use This ▼" HorizontalAlignment="Right" Click="UseVanilla_Click" Style="{StaticResource DarkButton}" Padding="8,3"/>
                        </Grid>
                    </Border>

                    <RichTextBox x:Name="LeftDiffView" Grid.Row="1" 
                                 Background="#1E1E1E" Foreground="#D4D4D4"
                                 FontFamily="Consolas" FontSize="12"
                                 IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 BorderThickness="0"
                                 ScrollViewer.ScrollChanged="SyncScroll_Left"/>
                </Grid>
            </Border>

            <!-- Right Panel - Mod Version -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#333333" Padding="10,6">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Mod Version: " FontWeight="SemiBold" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                                <ComboBox x:Name="ModVersionSelector" MinWidth="200" SelectionChanged="ModVersionSelector_Changed" 
                                          Style="{StaticResource DarkComboBox}" ItemContainerStyle="{StaticResource DarkComboBoxItem}"/>
                            </StackPanel>
                            <Button x:Name="UseModButton" Content="Use This ▼" HorizontalAlignment="Right" Click="UseMod_Click" Style="{StaticResource DarkButton}" Padding="8,3"/>
                        </Grid>
                    </Border>

                    <RichTextBox x:Name="RightDiffView" Grid.Row="1" 
                                 Background="#1E1E1E" Foreground="#D4D4D4"
                                 FontFamily="Consolas" FontSize="12"
                                 IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 BorderThickness="0"
                                 ScrollViewer.ScrollChanged="SyncScroll_Right"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Merge Result Header -->
        <Border Grid.Row="2" Background="#333333" Padding="10,6" Margin="10,0">
            <Grid>
                <TextBlock Text="Merge Result (Editable)" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset to Vanilla" Click="ResetToVanilla_Click" Style="{StaticResource DarkButton}" Padding="8,3" Margin="0,0,8,0"/>
                    <Button Content="Reset to Mod" Click="ResetToMod_Click" Style="{StaticResource DarkButton}" Padding="8,3"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Merge Result Editor -->
        <TextBox x:Name="MergeResultEditor" Grid.Row="3" 
                 Background="#1E1E1E" Foreground="#D4D4D4"
                 FontFamily="Consolas" FontSize="12"
                 AcceptsReturn="True" AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 BorderThickness="0"
                 Margin="10,0,10,10"/>

        <!-- Footer -->
        <Border Grid.Row="4" Background="#252526" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0" Foreground="#888888" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Accept &amp; Continue" Click="AcceptAndContinue_Click" Style="{StaticResource SuccessButton}" Padding="15,8" Margin="0,0,10,0"/>
                    <Button Content="Accept All &amp; Close" Click="AcceptAllAndClose_Click" Style="{StaticResource AccentButton}" Padding="15,8" Margin="0,0,10,0"/>
                    <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource DarkButton}" Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
