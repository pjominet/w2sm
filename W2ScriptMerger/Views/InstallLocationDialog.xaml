<Window x:Class="W2ScriptMerger.Views.InstallLocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Choose Install Location"
        Height="150" Width="250"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D2D"
        Foreground="#FFFFFF">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Message}" TextWrapping="Wrap" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <RadioButton Content="CookedPC" IsChecked="{Binding IsCookedPcSelected}" Style="{StaticResource DarkRadioButton}"/>
            <RadioButton Content="UserContent" IsChecked="{Binding IsUserContentSelected}" Style="{StaticResource DarkRadioButton}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding OkCommand}" Style="{StaticResource SuccessButton}" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource DarkButton}"/>
        </StackPanel>
    </Grid>
</Window>
