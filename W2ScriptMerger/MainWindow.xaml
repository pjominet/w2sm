<Window x:Class="W2ScriptMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:W2ScriptMerger.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="800" Width="1200"
        MinHeight="650" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Configuration -->
        <Border Grid.Row="0" Background="#252526" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Game Path -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Game Path:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GamePath, Mode=TwoWay}" Style="{StaticResource DarkTextBox}" Margin="0,0,10,0"/>
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                    <Button Content="ðŸ“" ToolTip="Open folder" Command="{Binding OpenGameFolderCommand}" Style="{StaticResource DarkButton}" Margin="0,0,4,0"/>
                    <Button Content="Browse..." Command="{Binding BrowseGamePathCommand}" Style="{StaticResource DarkButton}"/>
                </StackPanel>

                <!-- Runtime Data Path -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Data Path:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,10,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RuntimeDataPath, Mode=TwoWay}" Style="{StaticResource DarkTextBox}" Margin="0,10,10,0" IsReadOnly="True"/>
                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="ðŸ“" ToolTip="Open folder" Command="{Binding OpenRuntimeDataFolderCommand}" Style="{StaticResource DarkButton}" Margin="0,0,4,0"/>
                    <Button Content="Browse..." ToolTip="Change data folder (mods, scripts)" Command="{Binding BrowseRuntimeDataPathCommand}" Style="{StaticResource DarkButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Mods List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Mods Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Staged Mods" FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="âž• Add Mods" Command="{Binding AddModsCommand}" Style="{StaticResource AccentButton}" Margin="0,0,8,0"/>
                        <Button Content="ðŸ—‘ï¸ Purge All Mods" Command="{Binding PurgeModsCommand}" Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                    <TextBox Text="{Binding ModSearchFilter, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DarkTextBox}"
                             Tag="ðŸ” Search mods..."/>
                </StackPanel>

                <!-- Mods List -->
                <ListBox Grid.Row="1" ItemsSource="{Binding FilteredMods}" Style="{StaticResource DarkListBox}"
                         ItemContainerStyle="{StaticResource DarkListBoxItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Deploy Status Indicator -->
                                <Ellipse Grid.Column="0" Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#888888"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDeployed}" Value="True">
                                                    <Setter Property="Fill" Value="#32CD32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Files.Count, StringFormat='{}{0} files'}" FontSize="11" Foreground="#888888"/>
                                        <TextBlock Text=" â€¢ " FontSize="11" Foreground="#555555" Visibility="{Binding IsDeployed, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="Deployed" FontSize="11" Foreground="#32CD32" Visibility="{Binding IsDeployed, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="ðŸ“" ToolTip="Open staging folder"
                                            Command="{Binding DataContext.OpenModFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButton}" Margin="4,0,0,0"/>
                                    <Button Content="â–¶" ToolTip="Deploy mod"
                                            Command="{Binding DataContext.DeployModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonSuccess}" Margin="4,0,0,0"
                                            Visibility="{Binding IsDeployed, Converter={StaticResource InverseBoolToVis}}"/>
                                    <Button Content="â†©" ToolTip="Remove mod from game"
                                            Command="{Binding DataContext.RemoveModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonWarning}" Margin="4,0,0,0"
                                            Visibility="{Binding IsDeployed, Converter={StaticResource BoolToVis}}"/>
                                    <Button Content="âž–" ToolTip="Delete mod"
                                            Command="{Binding DataContext.DeleteModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonDanger}" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Button Content="ðŸ”€ Merge Scripts" Command="{Binding StartMergeCommand}" Style="{StaticResource AccentButton}" Margin="0,0,0,8"/>
                    <CheckBox Content="Prompt for unknown install location"
                              IsChecked="{Binding PromptForUnknownInstallLocation}"
                              Style="{StaticResource DarkCheckBox}"
                              ToolTip="When enabled, prompts for deploy location on mods without CookedPC/UserContent folder structure. Otherwise defaults to CookedPC." Margin="0,0,0,8"/>
                    <Button Content="ðŸ“¦ Deploy Mods" Command="{Binding DeployModsCommand}" Style="{StaticResource SuccessButton}" Margin="0,0,0,8"/>
                    <Button Content="ðŸ”„ Restore Vanilla" Command="{Binding RestoreVanillaCommand}" Style="{StaticResource DarkButton}" Margin="0,0,0,8"/>
                </StackPanel>
            </Grid>

            <!-- Right Panel - Conflicts and Log -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- Conflicts Header -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Script Conflicts" FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="PendingMergeWarning" Text="âš  Merge required" Foreground="#E37308"
                                   Visibility="{Binding HasPendingMergeChanges, Converter={StaticResource BoolToVis}}"
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </StackPanel>
                </Grid>

                <!-- Conflicts Tree -->
                <TreeView Grid.Row="1" ItemsSource="{Binding DzipConflicts}" Style="{StaticResource DarkTreeView}"
                          SelectedItemChanged="ConflictTree_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding ScriptConflicts}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#FF4444"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFullyMerged}" Value="True">
                                                    <Setter Property="Fill" Value="#32CD32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DzipName}" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="{Binding ModSources.Count, StringFormat=' ({0} mods)'}" Foreground="#888888"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding ModNamesDisplay}" FontSize="11" Foreground="#666666" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#FF4444"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="AutoResolved">
                                                            <Setter Property="Fill" Value="#32CD32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="ManuallyResolved">
                                                            <Setter Property="Fill" Value="#1E90FF"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="NeedsManualResolution">
                                                            <Setter Property="Fill" Value="#E37308"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding ScriptFileName}" Foreground="#CCCCCC"/>
                                    </StackPanel>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <!-- Conflict Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10">
                    <Button x:Name="DebugMergeEditorButton" Content="âœ Debug Merge Editor" Command="{Binding OpenDebugMergeEditorCommand}"
                            Style="{StaticResource AccentButton}" Margin="0,0,8,0"
                            IsEnabled="{Binding HasUnresolvedConflicts}"/>
                    <Button x:Name="ViewDiffButton" Content="ðŸ‘ View Diff" Command="{Binding ViewDiffCommand}" Style="{StaticResource DarkButton}" Visibility="Collapsed"/>
                    <Button Content="ðŸ“‹ View Merge Summary" Command="{Binding ViewMergeSummaryCommand}" Style="{StaticResource SuccessButton}"
                            Visibility="{Binding HasExistingMerge, Converter={StaticResource BoolToVis}}" Margin="0,0,8,0"/>
                </StackPanel>

                <!-- Diff Preview -->
                <TextBox Grid.Row="3" Text="{Binding DiffViewText, Mode=OneWay}"
                         Style="{StaticResource DarkTextBox}"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="11"
                         Height="150"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap"
                         AcceptsReturn="True"
                         Visibility="{Binding DiffViewText, Converter={StaticResource StringToVis}}"/>

                <!-- Log Header -->
                <TextBlock Grid.Row="4" Text="Log" FontSize="12" Foreground="#888888" Margin="0,10,0,5" VerticalAlignment="Top"/>

                <!-- Log Messages -->
                <TextBox Grid.Row="4" Text="{Binding LogText, Mode=OneWay}"
                         Style="{StaticResource DarkTextBox}"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="11"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,30,0,0"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="250" Height="15" HorizontalAlignment="Right"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
