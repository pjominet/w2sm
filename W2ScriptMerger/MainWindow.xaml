<Window x:Class="W2ScriptMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:W2ScriptMerger.ViewModels"
        mc:Ignorable="d"
        Title="Witcher 2 Mod/Script Manager"
        Height="750" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Configuration -->
        <Border Grid.Row="0" Background="#252526" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Game Path -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Game Path:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding GamePath, Mode=TwoWay}" Style="{StaticResource DarkTextBox}" Margin="0,0,10,0"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Command="{Binding BrowseGamePathCommand}" Style="{StaticResource DarkButton}"/>

                <!-- Mod Staging Path -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Mod Staging Path:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,10,10,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ModStagingPath, Mode=TwoWay}" Style="{StaticResource DarkTextBox}" Margin="0,10,10,0"/>
                <Button Grid.Row="2" Grid.Column="2" Content="Browse..." Command="{Binding BrowseModStagingPathCommand}" Style="{StaticResource DarkButton}" Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Mods and Actions -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Loaded Mods Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Loaded Mods" FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="+ Add Mods" Command="{Binding AddModsCommand}" Style="{StaticResource AccentButton}" Margin="0,0,8,0"/>
                        <Button Content="Clear All" Command="{Binding ClearModsCommand}" Style="{StaticResource DarkButton}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Mods List -->
                <ListBox Grid.Row="1" ItemsSource="{Binding LoadedMods}" Style="{StaticResource DarkListBox}"
                         ItemContainerStyle="{StaticResource DarkListBoxItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding ModName}" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding Files.Count, StringFormat='{}{0} files'}" FontSize="11" Foreground="#888888"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="âœ•" Command="{Binding DataContext.RemoveModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" Style="{StaticResource DarkButton}" Padding="6,2" FontSize="10"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Button Content="ðŸ“¦ Deploy Mods" Command="{Binding InstallMergedFilesCommand}" Style="{StaticResource AccentButton}"/>
                </StackPanel>
            </Grid>

            <!-- Right Panel - Conflicts and Diff View -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- Conflicts Header -->
                <TextBlock Grid.Row="0" Text="Script Conflicts" FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,8"/>

                <!-- Conflicts List -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Conflicts}" SelectedItem="{Binding SelectedConflict}"
                         Style="{StaticResource DarkListBox}" ItemContainerStyle="{StaticResource DarkListBoxItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" Width="10" Height="10" Margin="0,5,8,0" VerticalAlignment="Top">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#FF4444"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="AutoResolved">
                                                    <Setter Property="Fill" Value="#32CD32"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="ManuallyResolved">
                                                    <Setter Property="Fill" Value="#1E90FF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding OriginalFileName}" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding OriginalFilePath}" FontSize="10" Foreground="#888888" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Conflicting Files:" FontSize="10" Foreground="#888888" Margin="0,0,0,0"/>
                                    <ItemsControl ItemsSource="{Binding ConflictingFilePaths}" Margin="10,0,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="10" Foreground="#AAAAAA" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Diff Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10">
                    <Button Content="ðŸ”„ Auto Merge" Command="{Binding AutoMergeAllCommand}" Style="{StaticResource SuccessButton}" Margin="0,0,8,0"/>
                    <Button Content="âœ Open Merge Editor" Command="{Binding OpenMergeEditorCommand}" Style="{StaticResource AccentButton}" Margin="0,0,8,0"/>
                    <Button Content="ðŸ‘ View Diff" Command="{Binding ViewConflictDiffCommand}" Style="{StaticResource DarkButton}"/>
                </StackPanel>

                <!-- Diff View -->
                <TextBox Grid.Row="3" Text="{Binding DiffViewText, Mode=OneWay}"
                         Style="{StaticResource DarkTextBox}"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="11"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap"
                         AcceptsReturn="True"/>

                <!-- Log Header -->
                <TextBlock Grid.Row="4" Text="Log" FontSize="12" Foreground="#888888" Margin="0,10,0,5"/>

                <!-- Log Messages -->
                <TextBox Grid.Row="5" Text="{Binding LogText, Mode=OneWay}"
                         Style="{StaticResource DarkTextBox}"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="11"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="5,5">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="250" Height="15" HorizontalAlignment="Right"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
